/*Maak de table voorraad aan*/

CREATE TABLE `Voorraad`
  ( `Locatiecode` INT NOT NULL ,
  `Productcode` INT NOT NULL ,
  `Aantal` INT NOT NULL ,
  PRIMARY KEY (`Locatiecode`, `Productcode`));

/*Vul de table Voorrad met aangeleverde gegevens*/

